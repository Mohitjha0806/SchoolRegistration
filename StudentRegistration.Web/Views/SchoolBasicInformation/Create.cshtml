@{
	ViewData["Title"] = "Add School Basic Registration";
	Layout = "~/Views/Shared/_Layout.cshtml";
}

@model SchoolRegistration.Entities.Model.SchoolBasicInformation

<style>
	.dropdown {
		position: relative;
		display: inline-block;
	}

	.dropdown-content {
		display: none;
		position: absolute;
		background-color: #f9f9f9;
		min-width: 160px;
		box-shadow: 0px 8px 16px 0px rgba(0,0,0,0.2);
		z-index: 1;
	}

		.dropdown-content label {
			display: block;
			margin-top: 10px;
		}

	.dropdown:hover .dropdown-content {
		display: block;
	}
</style>


<div class="card mb-5">
	<div class="card-header">
		<div class="row page-titles mx-0">
			<div class="col-sm-6 p-md-0">
				<div class="welcome-text">
					<h4>Add School Basic Registration</h4>
				</div>
			</div>
			<div class="col-sm-6 p-md-0 justify-content-sm-end mt-2 mt-sm-0 d-flex">
				<ol class="breadcrumb">
					<li class="breadcrumb-item"><a href="#">Civil Construction</a></li>
					<li class="breadcrumb-item active"><a href="#">Add School Basic Registration</a></li>
				</ol>
			</div>
		</div>
	</div>
</div>


<div class="card">
	<div class="card-header">
		<div class="row px-2">
			<div class="col-md-6">
				<h4 class="card-title">
					Add Construction Work Details
				</h4>
			</div>
			<div class="col-md-6 text-end">
				<a asp-action="Index" asp-controller="SchoolBasicInformation" class="btn btn-primary shadow sharp me-1">
					Go Back
				</a>
			</div>
		</div>
	</div>
	<div class="card-body">
		<fieldset class="mt-3" style="border: 1px solid black;">
			<legend style="padding: 2px 8px; border-radius: 10px; width: auto; float: inline-start; background: white; margin-top: -1.4em; margin-bottom: 1rem; border: 2px solid var(--vz-dark); font-size: 1rem; font-weight: 600; color: var(--vz-primary); box-sizing: border-box; margin-bottom: 0.5rem; display: block; max-width: 100%; white-space: normal; padding-inline: 8px;">School Basic Information</legend>
			<form asp-action="Create" asp-controller="SchoolBasicInformation" method="post">
				<div class="row mb-3">
					<div class="col-md-4 px-3">
						<div class="form-group">
							<label class="form-label">
								Enter UDISE<span style="color: red">*</span>
							</label>
							<input type="text" class="form-control" placeholder="Enter UDISE" asp-for="UDISECode" id="UDISECode" />
						</div>
					</div>
					<div class="col-md-4 px-3">
						<div class="form-group">
							<label class="form-label">
								Enter Name (In English)<span style="color: red">*</span>
							</label>
							<input type="text" class="form-control" placeholder="Enter Name In English" asp-for="SchoolNameEnglish" id="SchoolNameEnglish" />
						</div>
					</div>
					<div class="col-md-4 px-3">
						<div class="form-group">
							<label class="form-label">
								Enter Name (In Hindi)<span style="color: red">*</span>
							</label>
							<input type="text" class="form-control" placeholder="Enter Name In Hindi" asp-for="SchoolNameHindi" id="SchoolNameHindi" />
						</div>
					</div>
				</div>
				<div class="row mb-5">
					<div class="col-md-4 px-3">
						<div class="form-group">
							<label class="form-label">
								Enter Year Of Establishment<span style="color: red">*</span>
							</label>
							<input type="text" class="form-control" placeholder="Enter Year Of Establishment" asp-for="YearOfEstablishment" id="YearOfEstablishment" />
						</div>
					</div>
					<div class="col-md-4 px-3">
						<div class="form-group">
							<label class="form-label">
								Enter Recognition<span style="color: red">*</span>
							</label>
							<input type="text" class="form-control" placeholder="Enter Recognition" asp-for="Recognition" id="Recognition" />
						</div>
					</div>
					<div class="col-md-4 px-3">
						<div class="form-group">
							<label class="form-label">
								Select Board<span style="color: red">*</span>
							</label>
							<select class="form-select select2" maltiple="" asp-for="SchoolBoard" id="SchoolBoard">
								<option>Select</option>
								<option>MPBSE</option>
								<option>CBSE</option>
								<option>ICSE</option>
								<option>NIOS</option>
								<option>IB</option>
								<option>AISSCE</option>
							</select>
						</div>
					</div>
				</div>
				<div class="row mb-3">
					<div class="col-md-4 px-3">
						<div class="form-check">
							<input class="form-check-input" type="checkbox" value="" id="flexCheckChecked" checked>
							<label class="form-check-label" for="flexCheckChecked">
								IsActive
							</label>
						</div>
					</div>
				</div>
			</form>
		</fieldset>

		<div class="col-md-12">
			<hr />
			<div class="form-group text-center">
				<button type="submit" class="btn me-2 btn-primary" id="SubmitBtn">Submit</button>
				<a asp-action="Create" asp-controller="SchoolBasicInformation" class="btn btn-danger light">Clear</a>
			</div>
		</div>
	</div>
</div>
<script>
		
</script>




